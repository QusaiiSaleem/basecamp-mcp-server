name = "basecamp-mcp-worker"
main = "index.ts"
compatibility_date = "2024-01-01"
compatibility_flags = ["nodejs_compat"]

[vars]
# Get this from your Basecamp OAuth flow - see README for setup instructions
BASECAMP_ACCOUNT_ID = "YOUR_ACCOUNT_ID"

# Secrets (set using wrangler secret put):
# BASECAMP_ACCESS_TOKEN - OAuth access token from Basecamp
# BASECAMP_CLIENT_ID - From your Basecamp integration
# BASECAMP_CLIENT_SECRET - From your Basecamp integration